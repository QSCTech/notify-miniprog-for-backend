/**index.wxss**/
.scroll {
  background-color: #dddddd;
  padding-top: 5rpx;
  padding-bottom: 30rpx;
}

.box {
  border-radius: 20rpx;
  margin: 30rpx 30rpx 0rpx 30rpx;
  width: 630rpx;
  background-color: white;
  padding: 30rpx;
}

.foldList {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  overflow: hidden;
  width: 630rpx;
  transition: all 400ms;
}

.websites {
  margin: 10rpx 10rpx 10rpx 0rpx;
  padding: 22rpx 30rpx !important;
  width: max-content;
  height: 40rpx !important;
  border-color: #dfdfdf !important;
  font-size: 28rpx !important;
}

.title {
  padding-left: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: rgb(77, 77, 77);
}

.type {
  margin: 30rpx 21rpx 0rpx 15rpx;
}

.typeName {
  font-size: 26rpx;
  text-align: center;
  color: #969696;
}

.typeIcon {
  height: 120rpx;
  width: 120rpx;
  border-radius: 60rpx;
  font-size: 60rpx;
  text-align: center;
  line-height: 115rpx;
  margin-bottom: 10rpx;
}

.settings {
  height: 40rpx;
  width: 40rpx;
  font-size: 40rpx;
  text-align: center;
  color: #969696;
  margin-right: 30rpx;
}

.foldingButton {
  width: 100%;
  height: 40rpx;
  margin-top: 10rpx;
  margin-bottom: -10rpx;
  min-height: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
