/* pages/index/search/searchResult/index.wxss */
.searchField {
  width: 100%;
  height: 90rpx;
}

.filterBtn {
  width: 66rpx !important;
  height: 62rpx !important;
  min-width: 66rpx !important;
  min-height: 62rpx !important;
  background-color: white !important;
  display: flex;
  justify-content: center;
  align-items: center;
}

.filter-container {
  width: 228rpx;
  height: 0rpx;
  border-radius: 0 0 26rpx 26rpx;
  position: absolute;
  top: var(--top--);
  right: 16rpx;
  z-index: 99;
  display: flex;
  overflow: hidden;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
  background: white;
  transition-duration: 350ms;
}
.filter-container .button {
  border-radius: 30rpx;
  width: 194rpx;
  height: 60rpx;
  margin-bottom: 12rpx;
  font-size: 28rpx;
  color: white;
}
.filter-list-show {
  height: 150rpx;
  /* animation: slide 500ms alternate both; */
}
@keyframes tilt-in-top-1 {
  0% {
    /* transform: translateY(-320rpx); */
    height: 0rpx;
    opacity: 1;
  }
  100% {
    -webkit-transform: rotateY(0deg) translateY(0) skewY(0deg);
    transform: rotateY(0deg) translateY(0) skewY(0deg);
    opacity: 1;
  }
}

@keyframes swing-in-top-fwd {
  0% {
    -webkit-transform: rotateX(-100deg);
    transform: rotateX(-100deg);
    -webkit-transform-origin: top;
    transform-origin: top;
    opacity: 0;
  }
  100% {
    -webkit-transform: rotateX(0deg);
    transform: rotateX(0deg);
    -webkit-transform-origin: top;
    transform-origin: top;
    opacity: 1;
  }
}

@keyframes slide {
  0% {
    transform: translateY(-100rpx);
    opacity: 1;
  }

  100% {
    /* transform: translateY(var(--top--)); */
    height: 300rpx;
    opacity: 1;
  }
}
.filter-list-hide {
  height: 0rpx;
  /* display: none !important; */
  /* animation: slide 500ms alternate reverse both; */
}
