  margin-top: 10rpx;
}

.headerText {
  font-size: 44rpx;
  font-weight: bold;
  color: #ffffff;
  padding: 0rpx 0rpx 20rpx 30rpx;
}

.scroll {
  background-color: #dddddd;
}

