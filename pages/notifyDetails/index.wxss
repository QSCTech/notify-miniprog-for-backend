/* pages/notifyDetails/index.wxss */

.detailContainer {
  width: 100%;
  min-width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 48rpx;
}

.detailTitle {
  width: 612rpx;
  margin-top: 40rpx;
  /* margin-bottom: 12rpx; */
  color: #4d4d4d;
  font-size: 36rpx;
  line-height: 48rpx;
  font-weight: bold;
  /* background-color: gray; */
}

.detailDate {
  width: 612rpx;
  min-width: 612rpx;
  font-size: 24rpx;
  line-height: 62rpx;
  color: #979797;
  text-align: left;
}

.detailInfo {
  margin-top: 42rpx;
  width: 612rpx;
  min-width: 612rpx;
  height: 68rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.categoryAndSource {
  height: 68rpx;
  min-height: 68rpx;
  display: flex;
  flex-direction: column;
}

.categoryOrSource {
  height: 32rpx;
  font-size: 24rpx;
  line-height: 24rpx;
  color: #969696;
}

.serious {
  color: #ff2349 !important;
}

.attachment {
  color: #cacaca;
  font-size: 46rpx;
}

.detailText {
  margin-top: 24rpx;
  margin-bottom: 36rpx;
  width: 612rpx;
  color: #4d4d4d;
  font-size: 24rpx;
  line-height: 36rpx;
  word-wrap: break-word;
}

.detailAttachment {
  width: 612rpx;
  margin-top: 24rpx;
  color: #6f74ff;
  font-size: 24rpx;
  line-height: 36rpx;
  word-wrap: break-word;
}

.detailOrigin {
  width: 612rpx;
  margin-top: 24rpx;
  color: #00a6e4;
  font-size: 24rpx;
  line-height: 32rpx;
  word-break: break-all;
}

.toolBar {
  width: 100%;
  height: 88rpx;
  min-height: 88rpx;
  position: fixed;
  bottom: 0px;
  /* background-color: blue !important; */
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.verticalCentered {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.reportBtn {
  width: 98rpx;
  height: 98rpx;
  border-radius: 49rpx;
  position: fixed;
  bottom: 12%;
  display: flex;

  align-items: center;
  background-color: blue;
  box-shadow: 6rpx 6rpx 8rpx #999999;
  transition: 300ms;
}
.reportIcon {
  margin-left: 8rpx;
  font-size: 32rpx;
  transition: 300ms;
  /* line-height: 65rpx; */
  /* background-color: brown; */
}

.DDLBtn {
  width: 48rpx;
  height: 48rpx;
  color: #969696;
  font-size: 36rpx;
  /* background-color: black; */
}

.toolBtn {
  width: 48rpx;
  height: 48rpx;
  color: #969696;
  font-size: 48rpx;
  /* background-color: black; */
}

.starred {
  color: #ff9a18;
}
.cancel-button {
  width: 180rpx !important;
  font-size: 30rpx !important;
  background-color: #c9c9c9 !important;
  border: none !important;
  margin-right: 30rpx;
}
.confirm-button {
  width: 320rpx !important;
  font-size: 30rpx !important;
  background-color: #00a5e3 !important;
  border: none !important;
  margin-left: 30rpx;
}
.button-wrp {
  display: flex;
  align-items: center;
  width: 100%;
  justify-content: center;
  margin: 40rpx;
  height: 100rpx;
}
