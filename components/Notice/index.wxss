.noticeContainer {
  width: 100%;
  height: 238rpx;
  min-height: 238rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
  /* background-color: blueviolet; */
  margin-top: 21rpx;
  /* margin-bottom: 21rpx; */
}

.noticeGroundOverlay {
  width: 678rpx;
  height: 238rpx;
  min-height: 238rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
  overflow: hidden;
  border-radius: 0 0 26rpx 26rpx;
  background-color: black;
}

.noticeBackground {
  width: 678rpx;
  height: 226rpx;
  min-height: 226rpx;
  position: relative;
  overflow: hidden;
  border-radius: 26rpx;
  background-color: white;
}

.noticeGround {
  width: 646rpx;
  height: 226rpx;
  min-height: 226rpx;
  margin-left: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.noticeLabels {
  min-width: 100rpx;
  min-height: 32rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.noticeAttachment {
  width: 48rpx;
  height: 32rpx;
  min-width: 48rpx;
  min-height: 32rpx;
  background-color: #6f74ff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.noticeStar {
  width: 48rpx;
  height: 32rpx;
  min-width: 48rpx;
  min-height: 32rpx;
  background-color: #ff9a18;
  display: flex;
  justify-content: center;
  align-items: center;
}

.noticeLabelPlaceHolder {
  width: 48rpx;
  height: 32rpx;
  min-width: 48rpx;
  min-height: 32rpx;
}

.noticeInfoContainer {
  width: 590rpx;
  height: 100rpx;
  margin-top: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.noticeTitle {
  width: 590rpx;
  height: 94rpx;
  min-height: 94rpx;
  font-size: 30rpx;
  color: #4d4d4d;
  font-weight: bold;
}

.noticeCategory {
  width: 460rpx;
  height: 32rpx;
  min-height: 32rpx;
  font-size: 24rpx;
  color: rgb(150, 150, 150);
  font-weight: bold;
}

.noticeSource {
  width: 460rpx;
  height: 32rpx;
  min-height: 32rpx;
  font-size: 24rpx;
  color: #969696;
  font-weight: bold;
}

.noticeStick {
  width: 0rpx;
  height: 0rpx;
  border-bottom: 72rpx solid #00a5e3;
  border-left: 72rpx solid transparent;
  position: absolute;
  bottom: 0;
  right: 0;
}

.noticeStickicon {
  font-size: 20rpx;
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
}

.noticeReddot {
  width: 38rpx;
  height: 38rpx;
  min-width: 38rpx;
  min-height: 38rpx;
  background-color: #ff2349;
  border-radius: 50%;
  position: absolute;
  top: 0rpx;
  left: 689rpx;
}

.noticeSerious {
  color: #ff2349 !important;
}

.noticeSwipeCellLeft {
  display: flex;
  flex-direction: row;
}

.noticeBtn {
  width: 108rpx;
  height: 226rpx;
  min-width: 108rpx;
  min-height: 226rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.stickTopBtn {
  background-color: #00a5e3;
}

.cancelTopBtn {
  background-color: #4d4d4d;
}

.readBtn {
  background-color: #ff9a18;
}

.cancelReadBtn {
  background-color: #969696;
}

.deleteBtn {
  background-color: #ff2349;
}

.noticeBtnIcon {
  font-size: 36rpx;
}

.noticeBtnCaption {
  margin-top: 24rpx;
  width: 50rpx;
  min-width: 50rpx;
  font-size: 24rpx;
  color: white;
}

.noticeLabelIcon {
  font-size: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
